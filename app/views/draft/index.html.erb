<div class='span12' style="margin-top:100px">
    <%=form_tag('taken') do%>
      <input id='player' name='player' type="text" class='input-large' style='margin-bottom:0'>
      <%=submit_tag "my team",:class=>'btn btn-primary submit_player', :id=>"myteam_"%>
      <%=submit_tag "opponent",:class=>'btn btn-danger submit_player',:id=>"opponent_"%>
    <%end%>
    <div class="tab-content">
      <%["myteam","qb","rb","wr","te","defense"].each do |position| %>
        <div class="<%=position  == 'myteam' ? 'tab-pane active' : 'tab-pane' %>" id="<%=position%>">
          <div class='<%=position == "myteam" ? "span3" : ""%>'>
            <h2><%=full_postion_name(position)%></h2>
          </div>
          <%if position == 'myteam'%>
            <div class='offset7 span2'
              <span><%=link_to "Clear Roster",{:action=>'clear_roster'},:class=>'btn btn-danger'%></span>
            </div>
          <%end%> 
          <table class='table table-striped table-bordered' id="table_<%=position%>">
            <tr>
              <td>name</td>
              <td>team</td>
              <td>fpts</td>
              <td>fvalue</td>
              <td>adp</td>
            </tr>
            <% @players.where("position= :position or status = :position",{:position=>position}).order("fpts DESC").each do |player| %>
              <tr id='<%=player.name.gsub(/\s+/, "").gsub(".","")%>' class="<%=position == 'myteam' ? '' : player.status.blank? ? '' : player.status == 'opponent' ? 'grey_out_opponent' : 'grey_out_myteam' %>">
                <td><%=player.name%></td>
                <td><%=player.team%></td>
                <td><%=player.fpts.to_f.round(2)%></td>
                <td><%=player.fvalue.to_f.round(2)%></td>
                <td><%=player.adp.to_f.round(2)%></td>
              <tr>
            <% end %>
          </table>
         </div>
      <% end %>
    </div>
</div>

<script type='text/javascript'>
$(function() {
  var availableTags = <%=raw @players.collect(&:name)%>;
    $("#player").autocomplete({
      source: availableTags
    });
  })
</script>